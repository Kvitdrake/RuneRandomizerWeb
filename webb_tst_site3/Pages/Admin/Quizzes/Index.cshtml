@page
@model webb_tst_site3.Pages.Admin.Quizzes.IndexModel
@{
    ViewData["Title"] = "Управление квизами";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <a asp-page="Create" class="btn btn-primary mb-3">Создать квиз</a>
    <div class="mb-3">
        
        <a asp-page="../Index" class="btn btn-outline-secondary">
            ← Назад к списку квизов
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var quiz in Model.Quizzes)
            {
                <tr>
                    <td>@quiz.Title</td>
                    <td>@(quiz.IsPublished ? "Опубликован" : "Черновик")</td>
                    <td>
                        <a asp-page="../Results/Index" asp-route-quizId="@quiz.Id" class="btn btn-info">
                            Управление результатами
                        </a>
                        <a asp-page="./Edit" asp-route-id="@quiz.Id" class="btn btn-sm btn-warning">Ред.</a>
                        <a asp-page="./Questions/Index" asp-route-quizId="@quiz.Id"
                           class="btn btn-sm btn-info">Вопросы</a>
                        <a asp-page="./Delete" asp-route-id="@quiz.Id" class="btn btn-sm btn-danger">Удл.</a>
                    </td>
                </tr>
            }
        </tbody>
       
    </table>
</div>