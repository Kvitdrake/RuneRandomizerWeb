@page "{id:int}"
@model webb_tst_site3.Pages.Admin.Articles.EditModel
@{
    ViewData["Title"] = "Редактировать статью";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Article.Id" />
        <div class="mb-3">
            <label asp-for="Article.Title"></label>
            <input asp-for="Article.Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Article.Description"></label>
            <textarea asp-for="Article.Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="Article.Url"></label>
            <input asp-for="Article.Url" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Article.Hashtags"></label>
            <input asp-for="Article.Hashtags" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Текущее изображение:</label>
            @if (!string.IsNullOrEmpty(Model.Article.ImageUrl))
            {
                <img src="@Model.Article.ImageUrl" style="max-height: 80px;" class="img-thumbnail mb-2" />
            }
            <input asp-for="Article.ImageFile" type="file" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Article.ParentId">Родительская статья</label>
            <select asp-for="Article.ParentId" asp-items="Model.Parents" class="form-select">
                <option value="">(верхний уровень)</option>
            </select>
        </div>
        <div class="form-check mb-3">
            <input asp-for="Article.IsPublished" class="form-check-input" />
            <label asp-for="Article.IsPublished" class="form-check-label">Опубликовано</label>
        </div>
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-page="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}