@page
@using webb_tst_site3.Pages
@model IndexModel
@{
    ViewData["Title"] = "Fiend Magic";
}

<div class="container text-center mt-5">
    <h1 class="display-4 mb-4">Добро пожаловать в Fiend Magic</h1>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            @if (!User.Identity.IsAuthenticated)
            {
                <h3 class="mb-4">Войдите в систему</h3>
                <div class="d-grid gap-3">
                    <a href="/Auth/Login" class="btn btn-primary btn-lg py-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Войти
                    </a>
                    <a href="/Auth/Register" class="btn btn-outline-primary btn-lg py-3">
                        <i class="fas fa-user-plus me-2"></i>Зарегистрироваться
                    </a>
                    @if (!string.IsNullOrEmpty(Model.TelegramBotAuthUrl))
                    {
                        <a href="@Model.TelegramBotAuthUrl" class="btn btn-telegram btn-lg py-3" style="background-color: #0088cc; color: white;">
                            <i class="fab fa-telegram me-2"></i>Войти через Telegram
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="d-grid gap-3">
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="/Admin/Index" class="btn btn-primary btn-lg py-3">
                            <i class="fas fa-tachometer-alt me-2"></i>Панель управления
                        </a>
                    }
                    <a href="/Home" class="btn btn-primary btn-lg py-3">
                        <i class="fas fa-home me-2"></i>Главная страница
                    </a>
                </div>
            }
        </div>
    </div>
</div>