@page
@model webb_tst_site3.Pages.HomeModel
@{
    ViewData["Title"] = "Главная";
}

<div class="container mt-4">
    @if (!string.IsNullOrWhiteSpace(Model.MainContent))
    {
        <div class="alert alert-secondary mb-4">
            @Html.Raw(Model.MainContent)
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(Model.CustomBlock))
    {
        <div class="alert alert-info mb-4">
            @Html.Raw(Model.CustomBlock)
        </div>
    }

    <div class="row">
        @if (Model.ShowRandomizer)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h3>Генератор рун</h3>
                        <p>Используйте генератор для случайного подбора рун</p>
                        <a asp-page="/Randomizer" class="btn btn-success mt-2">
                            <i class="fas fa-random me-2"></i>Перейти
                        </a>
                    </div>
                </div>
            </div>
        }
        @if (Model.ShowQuizzes)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h3>Квизы и тесты</h3>
                        <p>Пройдите наши тесты и узнайте больше о себе</p>
                        <a asp-page="/Quiz" class="btn btn-primary mt-2">
                            <i class="fas fa-question-circle me-2"></i>Перейти
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <h2 class="mt-5 mb-3">Последние статьи</h2>
    <div class="row">
        @foreach (var article in Model.Articles)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Description</p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <a href="@article.Url" target="_blank" class="btn btn-primary w-100">
                            <i class="fas fa-external-link-alt me-2"></i>Читать
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>